{
  "name": "YouTubeTracker",
  "version": "1.0",
  "description": "Track time spent on YouTube and make user aware of this",
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
    "matches": ["https://www.youtube.com/*"],
    "js": ["background.js"]
  }
],
  "permissions": ["tabs","storage","declarativeContent", "https://www.youtube.com/*"],
  "manifest_version": 2
}
